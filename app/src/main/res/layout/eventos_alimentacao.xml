<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título Principal -->
        <TextView
            android:id="@+id/titulo_hidratacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5F9EA0"
            android:text="@string/automonitoramento_hidratacao"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descricao_hidratacao"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Tabela de Marcação -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:stretchColumns="1,2,3,4,5,6,7">

            <!-- Cabeçalho -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/domingo"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/segunda"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/terca"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quarta"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quinta"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sexta"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sabado"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp" />
            </TableRow>

            <!-- Linhas de seleção -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/manha"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#ADD8E6" />

                <!-- CheckBoxes -->
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
            </TableRow>

            <!-- Adicione mais linhas conforme necessário -->
        </TableLayout>

        <!-- Legenda -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meta_atingida"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="8dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meta_nao_atingida"
                android:drawableStart="@drawable/ic_cross"
                android:drawablePadding="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
