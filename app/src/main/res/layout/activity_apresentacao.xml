<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82BDED"
    tools:context=".Apresentacao">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="416dp"
        android:layout_height="914dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="302dp"
            android:layout_height="300dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="90dp"
            android:padding="@dimen/padding_medium"
            android:contentDescription="@string/app_logo_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:srcCompat="@drawable/logo_inicial" />

        <Button
            android:id="@+id/button1"
            android:layout_width="291dp"
            android:layout_height="88dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="74dp"
            android:padding="@dimen/padding_medium"
            android:backgroundTint="#3C4A53"
            android:onClick="entrar"
            android:text="@string/Texto_de_botao_entrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="291dp"
            android:layout_height="88dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="74dp"
            android:padding="@dimen/padding_medium"
            android:backgroundTint="#3C4A53"
            android:onClick="cadastrar"
            android:text="@string/BotÃ£o_cadastrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintVertical_bias="0.087" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>